{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block content %}
<h2>Mon Compte</h2>
    Bienvenue {{app.user.firstname}} sur votre espace membre!!!
    {% if is_granted('ROLE_ADMIN') %}
        <small><a href="/admin">Vous êtes l'administrateur, accéder au backoffice</a></small><br/>
    {% endif %}
<hr>
    <div class="row">
        <div class="col-md-4">
            <div class="account-item text-center">
                <img src="{{ asset('assets/img/password.png') }}" alt="Modifier mon mot de passe"><br/>
                <a href="{{ path('account_password') }}">Modifier mot de passe</a>
            </div>
        </div>

        <div class="col-md-4">

            <div class="account-item text-center">
                <img src="{{ asset('assets/img/adress-book.png') }}" alt="Gérer mes adresses"><br/>
                <a href="{{ path('account_adress') }}">Gérer mes adresses</a>
            </div>
        </div>

    </div>

    <hr>
{% endblock %}
